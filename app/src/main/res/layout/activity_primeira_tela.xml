<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/a99logotop"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_primeiraTela"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bem Vindo à 99Trips! \nEstamos aqui para te proporcionar a melhor experiência :) \nEscolha o que você quer fazer hoje, buscar um passeio fantástico ou oferecê-lo!"
        android:layout_marginTop="200dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="22sp"/>

    <Button
        android:id="@+id/btn_buscarPasseio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="16dp"
        android:text="Buscar Passeios"
        android:textStyle="italic"
        android:backgroundTint="@color/white"
        android:textColor="#4A4A4A"/>

    <Button
        android:id="@+id/btn_cadastrarPasseio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="sans-serif-medium"
        android:text="Cadastrar Passeios"
        android:textStyle="italic"
        android:backgroundTint="@color/white"
        android:textColor="#4A4A4A"/>


</LinearLayout>